{
  "name": "@tailor-cms/ce-html-display",
  "description": "Tailor CMS HTML editor end-user component",
  "author": "Studion <info@gostudion.com> (https://github.com/tailor-cms)",
  "type": "module",
  "version": "0.2.1",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "pnpm nuke:dist && vue-tsc && vite build",
    "lint": "eslint ./src",
    "lint:fix": "pnpm lint --fix",
    "nuke": "pnpm dlx del-cli dist node_modules",
    "nuke:dist": "pnpm dlx del-cli dist",
    "prepublish": "pnpm build"
  },
  "peerDependencies": {
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@tailor-cms/ce-html-manifest": "workspace:*",
    "@tailor-cms/eslint-config": "1.1.2",
    "@vitejs/plugin-vue": "^6.0.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vue-tsc": "^3.1.8"
  },
  "publishConfig": {
    "access": "public"
  }
}
